import java.util.Scanner;

public class Exercise4 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		String s, c;
		int idade, qua, dez, tm, tf, to, cont, tc, tn, ta, mn, ha, oc;
		Scanner in= new Scanner(System.in);
		cont=0;
		qua=0;
		dez=0;
		tm=0;
		tf=0;
		to=0;
		tc=0;
		tn=0;
		ta=0;
		mn=0;
		ha=0;
		oc=0;
		while (cont<5)
		{
			System.out.print("Digite sua idade: \n");
			idade= in.nextInt();

			
			/*
			 * sexo
			 */
			System.out.print("Digite seu sexo: (1=feminino/ 2= masculino/ 3- outros)\n");
			s= in.nextLine();
			switch(s)
			{
			case "1":
				tf=tf+1;
				System.out.print("Você é do sexo feminino.\n");
				break;
			case "2":
				tm=tm+1;
				System.out.print("Você é do sexo masculino.\n");
				break;
			case "3":
				to=to+1;
				System.out.print("Você é considerado outros.\n");
				break;
	
			
			/*
			 * comportamento
			 */
			System.out.print("Digite seu sexo: (1= calmo/ 2= nervoso/ 3- agressivo)\n");
			c= in.nextLine();
			switch(c)
			{
			case "1":
				tc=tc+1;
				System.out.print("Você é calmo.\n");
				break;
			case "2":
				tn=tn+1;
				System.out.print("Você é nervoso.\n");
				break;
			case "3":
				ta=ta+1;
				System.out.print("Você é agressivo.\n");
				break;
			default:
				System.out.print("Não estabelecido.\n");
			}
				
				
				
			/*
			 * Mulheres nervosas 
			 */
			if(tf>=1 && tn>=1)
			{
				mn=mn++;
			}
			if(tm>=1 && ta>=1)
			{
				ha=ha++;
			}
			if(to>=1 && tc>=1)
			{
				oc=oc++;
			}
			if (idade>40 && tn>=1)
			{
				qua=qua+idade;
			}
			if (idade<18 && tc>=1)
			{
				dez=dez+idade;
			}
				
			cont++;
			
			}
			
			System.out.print("O número de pessoas calmas é "+tc+".\n");
			
			System.out.print("O número de mulheres nervosas é "+mn+".\n"); 

			System.out.print("O número de homens agressivos é "+ha+".\n");
			
			System.out.print("O número de outros calmos é "+oc+".\n");
			
			System.out.print("O número de pessoas a cima de 40 e nervosas é  "+qua+".\n");
			
			System.out.print("O número de pessoas com menos de 18 e calmas é  "+dez+".\n");


		}

	}


